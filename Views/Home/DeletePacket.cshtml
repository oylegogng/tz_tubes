@model tz_tubes.Models.Packet

<h1>Удалить пакет</h1>

<h3>Вы уверены, что хотите удалить пакет с номером @Model.PacketNumber?</h3>

<form asp-action="DeletePacketConfirmed" asp-route-id="@Model.PacketId" method="post">
    <button type="submit" class="btn btn-danger">Да, удалить</button>
    <a asp-action="AllPackets" class="btn btn-secondary">Отмена</a>
</form>
